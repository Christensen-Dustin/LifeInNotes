@model LoginViewModel

@{
    ViewBag.Title = "User Account Login Page";
 }

    
        <h1 id="Lift">User Account Login</h1>

        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div id="Lift" asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label id="Lift" asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label id="Lift" asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label id="Lift" asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
        <div id="Login"></div>