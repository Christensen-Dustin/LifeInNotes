@model IEnumerable<Note>

@{
    ViewBag.Title = "Note List for ";

    string currentId = ViewBag.userId;
}

<h2>Note List for @View</h2>

<div id="Index">
    @if (Model.Count() == 0)
    {
        <div class="card-deck">
            <div class="card m-3">
                <div class="card-header text-center" style="background-color:lightgray">
                    <h3>No Entry Has Been Made</h3>
                </div>
                <div class="card-body text-center">
                    Click the <b>CREATE</b> button to create an <b>ENTRY</b>
                </div>
                <div class="card-footer text-center" style="background-color:lightgray">
                    <h3>Thank you</h3>
                </div>
            </div>
        </div>
    }

    <div class="card-deck">
        @foreach (var entry in Model)
        {
            <div class="card m-3" style="min-width:300px; max-width:600px">
                <input type="hidden" />
                <input type="hidden" />
                <div class="card-header" style="background-color:lightgray">
                    <h3>@entry.Name</h3>
                </div>
                <div class="card-body">
                    <div><b>Entry Type:</b> @entry.Type</div>
                    <div><b>Entry Date:</b> @entry.Date</div>
                    <div><b>User Id:</b> @entry.UserId</div>
                    <div class="description">@entry.Content</div>
                </div>
                <div class="card-footer text-center" style="background-color:lightgray">
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@entry.Id"
                       class="btn btn-primary m-1">View</a>
                    <a asp-controller="Home" asp-action="UpdateEntry" asp-route-id="@entry.Id"
                       class="btn btn-dark m-1">Edit</a>
                </div>
            </div>
        }
    </div>
</div>