@model NoteUpdateViewModel

@{
    ViewBag.Title = "Update Existing Note";
}

<h2>Edit Entry</h2>

<form asp-controller="Home" asp-action="UpdateNote" method="post" class="mt-3">
    <input hidden asp-for="Id" />
    <input hidden asp-for="EntryId" />
    <div>
        <div class="form-group row">
            <label asp-for="Date" class="col-sm-2 col-form-label">
                <b>Date of Note</b>
            </label>
            <div class="col-sm-4">
                <input type="date" asp-for="Date" class="form-control col-sm-6" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <label asp-for="RefDate" class="col-sm-2 col-form-label">
                <b>Date of Reference</b>
            </label>
            <div class="col-sm-4">
                <input type="date" asp-for="RefDate" class="form-control col-sm-6" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Type" class="col-sm-2 col-form-label">
                <b>Type of Note</b>
            </label>
            <div class="col-sm-4">
                <select asp-for="Type" class="custom-select mr-sm-4 col-sm-6"
                        asp-items="Html.GetEnumSelectList<TType>()">
                    <option value="">Please Select</option>
                </select>
                <div class="col-sm-8">
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
            </div>
            <label asp-for="Theme" class="col-sm-2 col-form-label">
                <b>Theme of Note</b>
            </label>
            <div class="col-sm-4">
                <select asp-for="Theme" class="custom-select mr-sm-4 col-sm-6"
                        asp-items="Html.GetEnumSelectList<Theme>()">
                    <option value="">Please Select</option>
                </select>
                <div class="col-sm-8">
                    <span asp-validation-for="Theme" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Content" class="col-sm-2 col-form-label">
                <b>Content</b>
            </label>
            <div class="col-sm-10">

                <textarea asp-for="Content" class="form-control"
                          style="height:150px;overflow:auto" placeholder="Note Content">
                    </textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary" style="width:auto">Update</button>
                <a class="btn btn-danger" asp-controller="Home" asp-action="IndexNote">Cancel</a>
            </div>
        </div>
    </div>
</form>
<div id="Index"></div>